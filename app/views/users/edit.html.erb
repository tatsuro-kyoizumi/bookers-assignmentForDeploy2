
<div class="container">

        <p id="notice"></p>

        <h2>User info</h2>


    <% if @user.errors.any? %>
       <h3> <%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

<%= form_for(@user) do |f| %>

  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name,class: "name" %>

  </div>

  <div class="field">
    <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image,class: "user_image" %>

  </div>

  <div class="field">
    <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, class: "introduction" %>

  </div>

  <div class="actions">
    <%= f.submit 'Update User' %>
  </div>
</form>
      </div>



<% end %>