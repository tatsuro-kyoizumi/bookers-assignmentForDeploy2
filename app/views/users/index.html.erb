
<%= render 'list', user: current_user, book: @book %>




<div class="col-xs-9">
    <h2>Users</h2>

    <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

      <tr>
        <% @users.each do |user| %>

        <td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg',fallback: "no_image.jpg" %></td>
        <td> <%= user.name %></td>
        <td><%= link_to 'show', user_path(user),class: "user_#{user.id}" %></td>
      </tr>
      <% end %>
  </tbody>
</table>


  </div>